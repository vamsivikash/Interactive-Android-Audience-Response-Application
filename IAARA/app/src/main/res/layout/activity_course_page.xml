<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
android:layout_width="fill_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:orientation = "vertical"
android:background="@drawable/bg1"
tools:context="com.example.vamsivikash.clicker.HomePage">

<LinearLayout
    android:layout_weight="0.8"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz ID"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/quizId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:hint="Enter the Quiz Id     "
                android:inputType="number"
                android:maxLength="5"
                android:singleLine ="true"
                android:maxLines="1"
                bootstrap:be_roundedCorners="true"
                bootstrap:be_state="success" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quiz"
                android:layout_margin="3dp"
                android:text="Start"
                bootstrap:bb_icon_right="fa-android"
                bootstrap:bb_roundedCorners="true"
                bootstrap:bb_type="danger" />

        </TableRow>

    </TableLayout>
</LinearLayout>

<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>

<LinearLayout
    android:layout_weight="0.2"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp">

        <TableRow>

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grades"
                android:layout_margin="15dp"
                android:text="Grades"

                bootstrap:bb_icon_right="fa-android"
                bootstrap:bb_roundedCorners="true"
                bootstrap:bb_type="success" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnHomePage"
                android:layout_margin="15dp"
                android:text="HOME"
                bootstrap:bb_icon_right="fa-android"
                bootstrap:bb_roundedCorners="true"
                bootstrap:bb_type="success" />

        </TableRow>

    </TableLayout>

</LinearLayout>
</LinearLayout>


