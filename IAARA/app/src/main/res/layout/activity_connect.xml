<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vamsivikash.clicker.Connect">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="35dp">

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="CONNECT TO SERVER DIRECTLY"
            android:layout_span="2"
            android:layout_margin="15dp"
            android:textSize="20sp" />

    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the IP Address"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"/>
    </TableRow>

    <TableRow>
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/ipaddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:hint="Enter IP address of the server"
            android:singleLine ="true"
            android:inputType="phone"
            android:maxLines="1"
            bootstrap:be_roundedCorners="true"
            bootstrap:be_state="success" />

    </TableRow>

    <TableRow>
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnConnect"
            android:layout_margin="15dp"
            android:text="HOME"
            bootstrap:bb_icon_right="fa-android"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_type="success" />
    </TableRow>

</TableLayout>
</RelativeLayout>
